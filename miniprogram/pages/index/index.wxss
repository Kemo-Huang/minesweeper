page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}

.page {
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}

.slogon {
  width: 85%;
  margin-top: 75rpx;
  font-size: xx-large;
  font-weight: 800;
  color: green;
  text-align: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.start {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 70%;
  margin-bottom: 250rpx;
}

.start-icon {
  height: 70rpx;
  width: 70rpx;
}

.start-button {
  background-color: green;
  font-size: 40rpx;
  color: white;
}

.info {
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 40rpx;
}
